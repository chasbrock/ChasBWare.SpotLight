<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:ChasBWare.SpotLight.Infrastructure.ViewModels;assembly=ChasBWare.SpotLight.Infrastructure"
             xmlns:v="clr-namespace:ChasBWare.SpotLight.Views"
             xmlns:tk="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:DataType="vm:PlaylistViewModel"
             x:Class="ChasBWare.SpotLight.Views.PlaylistView">
    <tk:Expander IsExpanded="{Binding IsTracksExpanded}" Direction="Down" > 
        
        <tk:Expander.Header>
            <v:PlaylistHeaderView BindingContext="{Binding}" HorizontalOptions="Fill"/>
        </tk:Expander.Header>

        <v:TrackListView BindingContext="{Binding TracksViewModel}" VerticalOptions="Fill"/>
    </tk:Expander>
  
</ContentView>
