<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:ChasBWare.SpotLight.Infrastructure.ViewModels;assembly=ChasBWare.SpotLight.Infrastructure"
             x:DataType="vm:PlaylistViewModel"
             x:Class="ChasBWare.SpotLight.Views.PlaylistHeaderView">
      <Grid ColumnDefinitions="80,Auto,*"
            RowDefinitions="Auto,Auto">
          
        <Image Source="{Binding Image}" 
               VerticalOptions="Center" HorizontalOptions="Center" 
               Grid.Column="0" Grid.Row="0" Grid.RowSpan="2" Margin="4" />

         <Label Text="{Binding Path=Name}" 
                FontSize="20" FontAttributes="Bold" VerticalOptions="Center"
                Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="0" Margin="10,0" />

         <Label Text="{Binding Path=Owner}" 
                FontSize="14" FontAttributes="Bold" VerticalOptions="Center" 
                Grid.Column="1" Grid.Row="1" Margin="10,0" />

          <Label Text="{Binding Path=ReleaseDate, StringFormat='{0:MMMM yyyy}'}" 
                 FontSize="14" FontAttributes="None"
                 VerticalOptions="Center" 
                 Grid.Column="2" Grid.Row="1" Margin="10,0" />

                <ImageButton Command="{Binding Path=PlayTracklistCommand}" CommandParameter="{Binding}"
                             Source="icons8_play_button.png" Margin="4,0" 
                             Background="Transparent"
                             VerticalOptions="Center" HorizontalOptions="Center" 
                             Grid.Column="2" Grid.Row="0"/>
    </Grid>
</ContentView>
