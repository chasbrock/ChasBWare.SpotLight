<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:ChasBWare.SpotLight.Infrastructure.ViewModels;assembly=ChasBWare.SpotLight.Infrastructure"
             x:DataType="vm:PlaylistViewModel"
             x:Class="ChasBWare.SpotLight.Views.PlaylistHeaderView">
    <ContentView.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
            <LinearGradientBrush.GradientStops>
                <GradientStop Offset="0.1" Color="LightSeaGreen" />
                <GradientStop Offset="1" Color="Lavender" />
            </LinearGradientBrush.GradientStops>
        </LinearGradientBrush>
    </ContentView.Background>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="80"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Image Source="{Binding Image}" 
               VerticalOptions="Center" HorizontalOptions="Center" 
                Grid.Column="0" Margin="4" />

        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Label Text="{Binding Path=Name}" 
                   FontSize="20" FontAttributes="Bold" Grid.Row="0"
                   VerticalOptions="Center" Margin="10,0" />

            <Grid Grid.Row="1" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Label Text="{Binding Path=Owner}" 
                       FontSize="14" FontAttributes="Bold" 
                       VerticalOptions="Center" 
                       Grid.Column="0" Margin="10,0" />

                <Label Text="{Binding Path=ReleaseDate, StringFormat=MMMM yyyy}" 
                        FontSize="14" FontAttributes="None"
                        VerticalOptions="Center" 
                        Grid.Column="1" Margin="10,0" />

                <ImageButton Command="{Binding Path=PlayTracklistCommand}" CommandParameter="{Binding}"
                             VerticalOptions="Center" HorizontalOptions="Center" 
                             Grid.Column="2" 
                             Source="../Images/icons8-play-button-48.png" Margin="4"/>

                <ImageButton Command="{Binding Path=AddToQueueCommand}" CommandParameter="{Binding}"
                             VerticalOptions="Center" HorizontalOptions="Center" 
                             Grid.Column="3"
                             Source="../Images/icons8-add-song-64.png" Margin="4"/>


            </Grid>
        </Grid>
    </Grid>
</ContentView>
